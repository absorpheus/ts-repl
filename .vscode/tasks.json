{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "type": "shell",
      "command": "npm",
      "args": [
        "run",
        "--silent",
        "build"
      ],
      "isBackground": true,
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": false,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": true
      },
      "dependsOrder": "sequence",
      "dependsOn": [
        "Position Panel Right",
        "Focus Editor"
      ],
    },
    {
      "label": "Position Panel Right",
      "command": "${command:workbench.action.positionPanelRight}",
    },
    {
      "label": "Focus Editor",
      "command": "${command:workbench.action.focusLastEditorGroup}",
    },
  ]
}